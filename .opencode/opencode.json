{
  "$schema": "https://opencode.ai/config.json",
  "model": "openrouter/openrouter/aurora-alpha",
  "small_model": "openrouter/arcee-ai/trinity-mini:free",
  "provider": {
    "openrouter": {
      "options": {
        "baseURL": "https://openrouter.ai/api/v1"
      },
      "models": {
        "openai/gpt-oss-120b:free": {
          "name": "GPT-OSS 120B (Primary Chat)",
          "attachment": true,
          "limit": {
            "context": 131072,
            "output": 16384
          }
        },
        "z-ai/glm-4.5-air:free": {
          "name": "GLM-4.5-Air (Cron/Fallback)",
          "attachment": true,
          "limit": {
            "context": 131072,
            "output": 8192
          }
        },
        "openrouter/aurora-alpha": {
          "name": "Aurora Alpha (Speed/Moderator)",
          "limit": {
            "context": 128000,
            "output": 8192
          }
        },
        "qwen/qwen3-coder:free": {
          "name": "Qwen3-Coder 480B (Reasoner)",
          "attachment": true,
          "limit": {
            "context": 262144,
            "output": 32768
          }
        },
        "deepseek/deepseek-r1-0528:free": {
          "name": "DeepSeek R1 (Compactor)",
          "limit": {
            "context": 164000,
            "output": 16384
          }
        },
        "arcee-ai/trinity-large-preview:free": {
          "name": "Trinity Large (Alt Primary)",
          "attachment": true,
          "limit": {
            "context": 131072,
            "output": 16384
          }
        },
        "arcee-ai/trinity-mini:free": {
          "name": "Trinity Mini (Proactive/Light)",
          "limit": {
            "context": 131072,
            "output": 4096
          }
        },
        "meta-llama/llama-3.3-70b-instruct:free": {
          "name": "Llama 3.3 70B (Battle-tested Fallback)",
          "attachment": true,
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    }
  },
  "tools": {
    "write": false,
    "bash": false,
    "glob": false,
    "grep": false,
    "read": false,
    "edit": false,
    "patch": false,
    "lsp": false,
    "webfetch": false,
    "websearch": false
  },
  "permission": {
    "edit": "deny",
    "bash": "deny",
    "external_directory": "deny"
  },
  "share": "disabled",
  "server": {
    "port": 4096,
    "hostname": "127.0.0.1"
  },
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "-y", "@anthropic/mcp-sequential-thinking"]
    }
  }
}
