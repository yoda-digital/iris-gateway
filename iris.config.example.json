{
  "gateway": {
    "port": 19876,
    "hostname": "127.0.0.1"
  },
  "opencode": {
    "port": 4096,
    "hostname": "127.0.0.1",
    "autoSpawn": true
  },
  "security": {
    "defaultDmPolicy": "pairing",
    "pairingCodeTtlMs": 3600000,
    "pairingCodeLength": 8,
    "rateLimitPerMinute": 30,
    "rateLimitPerHour": 300
  },
  "channels": {
    "telegram": {
      "type": "telegram",
      "enabled": true,
      "token": "${env:TELEGRAM_BOT_TOKEN}"
    },
    "whatsapp": {
      "type": "whatsapp",
      "enabled": true
    },
    "discord": {
      "type": "discord",
      "enabled": true,
      "token": "${env:DISCORD_BOT_TOKEN}"
    },
    "slack": {
      "type": "slack",
      "enabled": true,
      "appToken": "${env:SLACK_APP_TOKEN}",
      "botToken": "${env:SLACK_BOT_TOKEN}"
    }
  },
  "cron": [
    {
      "name": "daily-greeting",
      "schedule": "0 9 * * *",
      "prompt": "Send a friendly good morning message",
      "channel": "telegram",
      "chatId": "YOUR_CHAT_ID"
    }
  ],
  "logging": {
    "level": "info"
  }
}
